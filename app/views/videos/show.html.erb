<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col m3">
		<div class="collection">
        	<% @videos.each do |video| %>
        		<%= link_to video.title, video, :class => 'collection-item' %>
        	<% end %>
      	</div>
	</div>
	<div class="col m9">
		<div class="card blue-grey darken-1">
			<div class="card-image">
				<div id="wistia_<%= @video.wistia %>"></div>	
			</div>
			
            <div class="card-content white-text">
              <button class="btn btn-primary" onclick="setPlaySpeed(0.75)">0.75</button>
              <button class="btn btn-primary" onclick="setPlaySpeed(1)">1</button>
              <button class="btn btn-primary" onclick="setPlaySpeed(1.5)">1.5</button>
              <button class="btn btn-primary" onclick="setPlaySpeed(2)">2</button>
              <br/>
              <span class="card-title"><%= @video.title %></span>
	          <p><%= @video.description %></p>
            </div>
            <div class="card-action">
              <%= link_to "Previous", @prev_video if !@prev_video.nil? %>
              <span class="right">
              	<%= link_to "Next", @next_video if !@next_video.nil? %>
              </span>
            </div>
          </div>
	</div>
</div>
<script src="http://fast.wistia.net/static/E-v1.js"></script>
<script>
wistiaEmbed = Wistia.embed("<%= @video.wistia %>", {
  videoQuality: "hd-only",
  videoFoam: true
});

function setPlaySpeed(speed){
	wistiaEmbed.playbackRate(speed);
}
</script>
